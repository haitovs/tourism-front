# --- runtime config ---
ENV=prod
APP_NAME="Expo Site"

# Process / server
PORT=8000
WEB_CONCURRENCY=4
USE_X_FORWARDED_HOST=true
FORCE_HTTPS=true
FORWARDED_ALLOW_IPS=*

# The frontend needs DB access to initialize.
# We point it to the container name 'tourism-db-1' defined in the backend stack.
DATABASE_URL=postgresql+psycopg2://tourism_api:3c6E1ZlyhON6JfiDoHDE7ITwlBoU0Fcl@tourism-db-1:5432/tourism_api


# Frontend will call the backend service on the internal Docker network
BACKEND_BASE_URL=http://backend:8000
# If backend differentiates tenants by Host header, set it; else leave blank
BACKEND_HOST_HEADER=

# Where images/files are served (backend's /uploads)
MEDIA_BASE_URL=https://api.turkmenchina.com
MEDIA_PREFIX=/uploads

# Translation provider (optional)
TRANSLATE_BASE_URL=https://libretranslate.de
TRANSLATE_API_KEY=

# I18n
DEFAULT_LANG=en
SUPPORTED_LANGS=en,ru,tk,zh

# Domain â†’ theme + site id map
SITE_MAP_RAW=turkmenchina.com:main:1,travel-turkmenistan.com:site-b:2
FRONT_SITE_ID=1
FRONT_SITE_SLUG=main
